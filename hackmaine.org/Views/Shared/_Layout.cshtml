<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Maine Hacker Club</title>
        <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-iphone-57.png" />
        <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-ipad-72.png" />
        <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-iphone-114.png" />
        <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon-ipad-144.png" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link rel="alternate" type="application/rss+xml" title="Maine Hacker Forum Feed" href="http://www.hackmaine.org/forums/gymrss.php" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Maine Hacker Club", "Index", "Home")</p>
                </div>
                <div class="float-right">
@*                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home", null, new { title = "Maine Hacker Home" })</li>
                            <li><a href="/forums" title="Maine Hacker Forums">Forums</a></li>
@*                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p><span class="copyleft" title="copylefted.">@DateTime.Now.Year - all rights reversed</span></p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/site")
        @RenderSection("scripts", required: false)
        <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
        @*Honey pot*@<div style="display: none;"><a href="http://www.hackmaine.org/uncomfortable.aspx">aspiration</a></div>
    </body>
</html>
